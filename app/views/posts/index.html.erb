<h1 class="header">My blog</h1>

<div class="blog-post">
	<% @posts.each do |post| %>
		<h3 id="title"><%= link_to post.title, post_path(post) %></h3>
		<div class="post-thumbnail"><%= image_tag post.image.url(:medium), class: "post-thumbnail" %></div>
		<p class="body-text"><%= post.body %></p>
		<div class="blog-footer">
			<p><%= link_to 'Edit', edit_post_path(post) %> |
	       <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: "Are you sure?" } %></p>
		</div>
	<% end %>
</div>

<%= render 'footer' %>
